package main

import "fmt"

//Crie um Array de floats com 6 elementos.
//Solicite ao usuário que informe um número que será adicionado em todas as posições do Array.
//Imprima o Array resultante.

func main() {
	var números = [6]float64{1, 2, 3, 4, 5, 6}
	var x, i float64
	fmt.Print("Me fale um numero para ser adicionano a lista")
	fmt.Scan(&x)
	for i = 0; i < 6; i++ {
		números[i] = números[i] + x
	}
	fmt.Println("A sua nova lista é:", números)
}
